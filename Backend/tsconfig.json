{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": [
    "api/*.ts",
    "*.js",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}